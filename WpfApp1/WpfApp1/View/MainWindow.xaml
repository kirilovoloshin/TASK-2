                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2A1313"/>
                    <GradientStop Color="#FFE82727" Offset="1"/>
                    <GradientStop Color="#FF086B76" Offset="0.515"/>
